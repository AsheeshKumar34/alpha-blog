<h1 class="text-center py-4">All Alpha Bloggers</h1>
<div class="text-center">
  <div class="col-md-4 offset-md-5">
    <%= will_paginate %>
  </div>
  <% @users.each do |user| %>
    <ul class="listing">
      <div class="row">
        <div class="card col-md-4 offset-md-4 py-3">
          <li>
            <%= link_to gravatar_for(user), user_path(user) %>
          </li>
          <li class="article-title">
            <%= link_to user.username, user_path(user) %>
          </li>
          <li>
            <small><%= pluralize(user.articles.count, "article") if user.articles %></small>
          </li>
          <% if logged_in? and current_user.admin? %>
            <li><%= link_to 'Delete this user', user_path(user), method: :delete,
                data: {confirm: "Are you sure yuo want to delete this user and all articles?"} %>
            </li>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>
  <div class="col-md-4 offset-md-5">
    <%= will_paginate %>
  </div>
</div>
