<h1 class="text-center py-4">Sign up for Alpha Blog</h1>
<%= render 'shared/errors', obj: @user %>
<div class="row">
  <div class="col-12"> 
    <%= form_for @user do |f| %>
      <div class="form-group row">
        <div class="col-sm-2 col-form-label">
          <%= f.label :username %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :username, class: "form-control", placeholder: "Username", autofocus: true %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-2 col-form-label">
          <%= f.label :email %>
        </div>
        <div class="col-sm-8">
          <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-2 col-form-label">
          <%= f.label :password %>
        </div>
        <div class="col-sm-8">
          <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-8 offset-sm-2">
          <%= link_to 'Back to article listing', articles_path %>
          <%= f.submit "Sign Up", class: "btn btn-primary float-right" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

